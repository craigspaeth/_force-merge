include ../../../components/util/activator

header.fair-layout-nav
  block icon
    a.fair-layout-logo( alt=fair.get('name'), title=fair.get('name'), href=profile.href() )
      include ../../profile_badge/profile_icon
  .fair-layout-search
    input.fair-layout-search-input.bordered-input(
      placeholder='Search exhibitors & artists'
      tabindex=1
      value=term
      autocomplete="off"
      autocorrect="off"
      autocapitalize="off"
      spellcheck="false"
    )
    .fair-layout-search-spinner: .loading-spinner-small
  nav.fair-layout-nav-tabs.garamond-tablist
    a.garamond-tab(
      href=profile.href(), class=activeClass("#{profile.href()}/overview")
    ) Overview
    span.garamond-tab-separator
    a.garamond-tab(
      href="#{profile.href()}/browse/booths", class=activeClass("#{profile.href()}/browse")
    ) Browse
    span.garamond-tab-separator
    a.garamond-tab(
      href="#{profile.href()}/for-you", class=activeClass("#{profile.href()}/for-you")
    ) For You
    span.garamond-tab-separator
    a.garamond-tab(
      href="#{profile.href()}/articles", class=activeClass("#{profile.href()}/articles")
    ) Articles
    span.garamond-tab-separator
    a.garamond-tab(
      href="#{profile.href()}/info", class=activeClass("#{profile.href()}/info")
    ) Info
