.noUi-background
  background #e5e5e5
  box-shadow none

.noUi-base
  background-color #e5e5e5

.noUi-horizontal
  height 5px

.noUi-origin
  border-radius 0px

.noUi-target
  border none
  box-shadow none
  background #fff

.noUi-horizontal .noUi-handle
  width 16px
  height 16px
  border-radius 15px
  left -7px
  box-shadow none
  border 1px solid #ccc
  cursor pointer

.noUi-connect
  background gray-dark-color

.noUi-horizontal:hover .noUi-connect
  background purple-color

.noUi-handle:before, .noUi-handle:after
  display none
