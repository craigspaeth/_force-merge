.article-section-image-set
  margin auto
  width 580px
  display block
  cursor pointer
  max-width 100%
  &__images
    float left
    display flex
    justify-content space-between
    @media screen and (max-width 620px)
      float none
      height inherit
      margin-bottom 10px
  &__image-container
    margin-right 10px
    height 150px
    display none
    transition all .5s
    @media screen and (max-width 620px)
      display block
      margin 0
  &__remaining
    avant-garde-size('s-headline')
    height 150px
    border 1px solid gray-lighter-color
    background-color white
    vertical-align top
    padding 5px
    min-width 80px
    width auto
    overflow hidden
    @media screen and (max-width 620px)
      display flex
      justify-content center
      align-items center
      height 100px
    &:hover
      transition 0.25s background-color
      background-color gray-lightest-color
  &__icon
    width  32px
    position relative
    text-align center
    margin 30px auto 20px auto
    @media screen and (max-width 620px)
      margin 10px
    svg
      width 32px
  &__icon
    &::after
      content attr(data-total)
      left 8px
      top 13px
      position absolute
  &__icon.is-double-digit
    &::after
      left 5px
  &__preview
    text-align center
    margin 25px 0px 20px 0px
  &__text
    text-align center

// Slideshow Modal
navigation-width= 115px

body.body-article .image-set-container
  .modalize-backdrop
    background-color white
  .modalize-dialog
    max-width 100%
    max-height 100%
  .modalize-close
    width navigation-width
    padding 45px
    top 0px
    right 0px
    z-index 3
    &:hover
      color black
    @media screen and (max-width 620px)
      width unset
      padding 30px
  .artist-suggestion-popover
    z-index 1080

.image-set-modal
  opacity 0
  height 100vh
  width 100vw
  &[data-state=loaded]
    opacity 1
    transition 0.25s opacity
  &__navigation
    height 100%
    display block

  // Artist + Follow
  &__artist-name
    garamond-size('headline')
    fine-faux-underline()
    margin 0 20px
  // Navigation arrows
  .mgr-navigation
    width 100%
    top 0
    opacity 1
  .mgr-arrow-right
    left unset
    right 0
  .mgr-arrow-left
    right unset
    left 0
  .mgr-arrow-left, .mgr-arrow-right
    z-index 2
    position fixed
    padding 50vh 40px
    width navigation-width
    height 100%
    cursor pointer
    vertical-align top
    &:hover
      transition background-color 0.25s
      background-color gray-lightest-color
    .icon-chevron-right
      vertical-align middle
    &.image-set-modal-js__right
      right 0
      top 0

  // Image + Metadata
  .mgr-cell
    width 100vw
    height 100vh
    overflow hidden
    display flex
    justify-content center
    align-items center
  &__container
    padding 0px navigation-width
    display flex
    flex-direction column
    justify-content center
  &__metadata, &__artist-container
    white-space normal
  &__image
    max-height 70vh
    max-width 70vw
    margin 20px auto auto auto
  &__title
    font-style italic
    span
      font-style none
  &__title, &__date
    display inline-block
  &__title-container, &__caption
    margin-top 20px
  &__caption, &__title-container, &__link, &__partner
    color gray-dark-color
    garamond-size('s-body',true)
  &__caption
    padding-right 35px
  &__link
    faux-underline()
  &__pagination
    margin-top 23px
    float right
    avant-garde-size('body',true)

  @media screen and (max-width 620px)
    &__container
      padding 0px
    &__image
      max-width 100vw
      max-height 50vh
    .mgr-navigation
      display none
    &__metadata
      margin 0 20px
    &__caption, &__title-container, &__link, &__partner
      garamond-size('l-caption',true)

  .entity-follow
    display inline-block
    margin 0 0 10px 20px
