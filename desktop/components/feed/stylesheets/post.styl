.feed-right-column
  figure
    margin 0px
    padding: 30px 0px
    &:last-child
      padding-bottom: 0px
    &:first-child
      padding-top: 0px

  .placeholder
    width 100%
    position relative

.feed-left-column
  .body
    margin-bottom: 20px
    overflow: hidden
    h1
      font-size: 34px
      line-height: 123%
      margin-bottom: 20px
      word-wrap: break-word
      a
        text-decoration: none

    h2
      avant-garde()
      font-size: 13px
      text-align: left
      padding: 0px
      margin: 0px
      a
        text-decoration: none
        &:hover
          color: $artsy-bright

    a
      text-decoration: underline
    strong, b
      font-weight: bold
      font-size: 17px
      line-height: 150%
    em, i
      font-style italic
      font-size: 17px
    p
      font-size: 17px
      line-height: 150%
      margin: 1.4em 0
      &:first-child
        margin-top: 0px
      &:last-child
        margin-bottom: 0px

  .see-post
    display: none
    width: 100%
    border-top: 1px solid gray-lighter-color
    padding: 17px 0px
    background-color: white
    cursor: pointer
    text-align: center
    font-size: 22px
    font-weight: bold
    line-height: 17%
    margin-top: -20px
    color: gray-dark-color
    height: 36px
    padding-top: 16px
    &:hover
      background-color: #f5f5f5

  .profile-badge-icon, .profile-badge-initials
    float: left
    height: 33px
    width: 33px
    margin-right 9px

  .post-title
    font-size: 34px
    line-height: 123%
    margin-bottom: 20px
    word-wrap: break-word
    text-decoration none

  .featured-by
    avant-garde()
    font-size: 13px
    color: #888
    line-height: 138%
    padding: 0px
    margin: 0px
    padding-bottom: 12px

  .posted-at
    avant-garde()
    color: #888
    font-size: 9px
    text-align: left
    margin-top: -5px

.feed-item-post-label
  margin-bottom: 26px

.post-actions
  border-top: 1px dotted gray-lighter-color
  padding-top: 8px
  position: relative
  .post-share-actions
    display inline-block
  .post-modifier-actions
    display: inline-block
    vertical-align: top
    margin-top: 6px
    a
      margin-left 10px
  a
    avant-garde()
    display: inline-block
    font-size: 13px
    margin-right: 0px
    padding-top: 2px
    text-transform: uppercase
    text-decoration: none
    &:hover
      color: $artsy-bright
      text-decoration: none
    &.unrepost, &.repost
      display: none

//
// feature (admins)
.posts-dialog
  display: none
  background-color: #fff
  border: 1px solid gray-lighter-color
  opacity 0
  padding: 10px
  position: absolute
  z-index: -1
  display: none
  bottom: 48px
  width: 404px
  left: 0px
  margin-left: 0px
  &.on
    display: block
    opacity 1
    z-index: 99

  .slug-container
    input:first-child
      margin-bottom: 10px

  .feature-by-slug
    margin-top: 15px

  .error
    garamond()
    color: red-color
    font-size: 12px
    text-align center

  .feature_attachment
    text-decoration: none
    &:before
      content: 'Post On'

  .unfeature_attachment
    text-decoration: underline
    &:before
      content: 'Remove From'

  .feature-artworks, .feature-artists
    a
      border-bottom: 1px solid gray-lighter-color
      padding: 5px
      font-size: 13px
      display: block
      &:hover
        background: gray-lighter-color

    .post-dialog-feature
      text-decoration: none
      &:before
        content: 'Post On '
    .post-dialog-unfeature
      text-decoration: underline
      &:before
        content: 'Remove From '

  .feature-artworks
    margin-bottom: 20px
