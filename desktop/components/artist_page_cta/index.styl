@require '../stylus_lib'

.artist-page-cta.fullscreen
  height calc(100%)

.artist-page-cta
  position fixed
  right 0
  bottom 0
  left 0
  height 100px
  width calc(100%)
  background-color white
  transform translateY(0%)
  z-index 999
  border-top 2px solid purple-color
  transition all, 300ms, ease
  .main-layout-container
    margin-top 20px
  button
    float right
    margin-top 5px
  &__image
    vertical-align middle
    display inline
    width 60px
    border-radius 60px
    margin-right 15px
  &__headline
    vertical-align middle
    display inline-block
    font-size 20px
    &__artist-name
      font-weight bold

.artist-page-cta-overlay
  &__headline
    text-align center
    margin-top 40px
    font-size 40px
    line-height 1.3em
    &__artist-name
      font-weight bold
  &__close
    position absolute
    right 20px
    top 10px
    font-size 40px
    color gray-lighter-color
    cursor pointer
