@require '../stylus_lib'

.notice-message
  position relative
  height main-header-height
  text-align center
  background-color yellow-light-color
  border-bottom 1px solid darken(yellow-light-color, 10%)
  > span
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    garamond-size('s-body')
.notice-message-close
  position absolute
  top 50%
  right 0
  transform translateY(-50%)
  padding 20px
  font-size 25px
  cursor pointer
  color rgba(black, 0.25)
