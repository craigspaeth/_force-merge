#auction-result-detail-page
  padding-bottom 60px
  .avant-garde-jump-link
    float right
    font-size 13px

.auction-result-detail-header
  padding 40px 0
  max-width 75%
  > h1
    font-size 30px
    line-height 1.2
    > a
      text-decoration none

.auction-result-detail
  margin 20px 0
  clearfix()

.ard-image
  position relative
  float left
  width 230px
  margin-right 30px
  min-height 1px
  > img
    max-width 100%

.ard-metadata
  float left
  width calc('100% - 260px')
  > dl
    margin 20px 0
    border-top 1px solid gray-lighter-color
    padding-top 20px
    overflow hidden
    &:first-child
      margin-top 0
    > dt
    > dd
      overflow ellipsis
      padding 5px 0
    > dt
      avant-garde()
      font-size 13px
      float left
      clear left
      width 140px
    > dd
      font-size 17px

.ard-description
.ard-external
  margin 20px 0
  border-top 1px solid gray-lighter-color
  padding-top 20px

.ard-description
  max-width 600px
  > p
    margin 20px 0
    font-size 17px

.ard-external-disclaimer
  color gray-darker-color

// Artist section
.auction-result-artist
  clearfix()
  padding-top 20px
  border-top 1px solid gray-lighter-color

.ara-header
  display table
  margin-top 60px
  h2
    garamond()
    font-size 30px
    line-height 1.2
    > a
      text-decoration none

.ara-header-cell
  display table-cell
  vertical-align middle
  &:first-child
    padding-right 12px
  &:last-child
    padding-left 12px

.ara-available-works-count
  margin 20px 0
  padding-bottom 20px
  avant-garde()
  font-size 13px
  border-bottom 1px solid gray-lighter-color
  > a
    text-decoration none

.ara-artworks
  margin 20px 0

// More results
.auction-result-more-results
  clearfix()
  margin-top 60px
  > h2
    avant-garde()
    font-size 13px
    > a
      text-decoration none

// Modal wrapper
.auction-result-detail-modal
  .modal-body
    padding 40px
  .auction-result-detail-header
    margin-bottom 20px
    padding 0
  .auction-result-detail
    padding-top 20px
    border-top 1px solid gray-lighter-color
  .ard-metadata > dl:first-child
    border-top 0
    padding-top 0
  .auction-lot-image-zoom
    cursor default
    transition opacity 0.5s
