.settings-payment-methods
  //

  &__new
    position absolute
    top 0
    right 0

  &__cards
    block-margins(gutter)

    &__card
      position relative
      height 250px
      padding gutter
      border 1px solid gray-lighter-color
      garamond-size('s-body')

      &__delete
        position absolute
        bottom gutter
        right gutter

      &__digits
        avant-garde-size('body')
        margin-bottom (gutter / 3)

      &__exp
        //
      &__name
        //

      &__logo
        display block
        width 50px
        height 30px
        margin (gutter / 3) 0
