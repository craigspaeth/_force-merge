.map-modal
  padding 40px
  display flex

.map-modal-show-information
  flex 1
  garamond-size('s-body')
  padding-right 20px

.map-modal-show-running-dates
.map-modal-partner-location-running-hours
  block-margins(35px)

.map-modal-show-map-link
  margin 20px 0
  a
    text-decoration none
  &:hover a
    text-decoration underline

.map-modal-show-map
  width 400px
  height @width
  margin-right 40px
  background-color gray-lighter-color
