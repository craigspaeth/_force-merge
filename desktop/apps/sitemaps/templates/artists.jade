doctype xml
urlset(
  xmlns='http://www.sitemaps.org/schemas/sitemap/0.9'
)
  - slugs = _.pluck(models, 'id')
  for slug in slugs
    url
      loc=sd.APP_URL + '/artist/' + slug
    url
      //-not every artist will have works, shows, etc; in that case these URLs will just redirect to /artist/slug
      loc=sd.APP_URL + '/artist/' + slug + '/shows'
    url
      loc=sd.APP_URL + '/artist/' + slug + '/related-artists'
    url
      loc=sd.APP_URL + '/artist/' + slug + '/auction-results'
      priority 0.3
