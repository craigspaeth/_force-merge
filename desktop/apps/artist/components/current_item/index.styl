.current-item
  transition background-color 0.25s
  border 1px solid gray-lighter-color
  text-decoration none
  display flex
  flex-direction row
  align-items center
  padding 10px
  width 100%
  height 100%
  &:hover
    background-color gray-lightest-color
  &__image
    height 60px
    width 60px
  &__name
  &__detail
    garamond-size('l-caption')
    margin-top 4px
    white-space nowrap
    text-overflow ellipsis
    overflow hidden
  &__detail
    color gray-darker-color
  &__left
    flex-shrink 0
  &__right
    margin-left 10px
    overflow hidden
