#partner-artists
  .partner-artist-info, .partner-artist-artworks
    margin-bottom 50px
  .partner-artist-info-left, .partner-artist-info-right
    display inline-block
    vertical-align top
  .partner-artist-info-left
    width (100 / 3) %
  .partner-artist-info-right
    width (100 / 3 * 2) %
    padding-left (100 / 30) %
  .partner-artist-artworks
    min-height 350px
    padding-bottom 50px
    border-bottom 1px solid #ccc
  .partner-artist-name
    avant-garde()
    text-decoration none
  .follow-button
    margin-top 20px
