.partner-shows
  .partner-shows-heading
    margin-bottom 50px
  .partner-shows-section
    margin-bottom 50px
    a
      text-decoration none

    .partner-shows-container
      grid-3-up(40px, 60px)

    .partner-shows-section-heading
      margin-bottom 50px

    .partner-show-cover-image
      background-size cover
      background-position 50% 40%
      padding-bottom 70%
      margin-bottom 10px
      position relative
      img
        display none

    .partner-show-overlay
      position absolute
      top 0
      bottom 0
      width 100%
      background-color black
      opacity 0
      transition opacity 0.3s ease-in-out
      &:hover
        opacity 0.4

    .partner-show-caption
      text-align center
      margin-bottom 20px

    .partner-show-heading, .partner-show-name, .partner-show-time
      line-height 1.1
      margin-bottom 10px

    .partner-show-heading
      font-size 13px
      margin-bottom 20px
      line-height 1.6em

    .partner-show-name
      font-size 24px
      font-style italic
      word-wrap break-word

    .partner-show-time
      font-size 18px

    .loading-spinner
      display none

  // Special treatment for the featured section
  .partner-shows-section.featured
    .partner-show
      width 100%
      padding 0
      margin 0

    .partner-show-cover-image
      padding-bottom 45%
      float right
      width 60%
      margin-bottom 0

    .partner-show-caption
      float right
      position relative
      top 120px
      width 37%
      margin-right 3%

    .partner-show-name
      font-size 50px
      margin-bottom 20px

  .partner-shows-see-all
    a
      font-size 13px
      &:hover:before
        border-bottom-width 2px
        margin-top 0.6em
