@require '../components/tooltips'

gutter-size = 44px
main-width = 696px + (gutter-size * 3)
aside-width = 400px
header-height = 400px
aside-margin = 100px
mobile-padding = 20px

.toolkit-header
  height header-height
  width 100%
  background url('/toolkit_background.jpg')
  background-size cover
  position relative
  h1
    font-size 60px
    max-width (gutter-size + main-width + aside-width)
    margin auto
    color white
    position absolute
    bottom 105px
    left 0
    line-height 65px
  img
    margin-top 75px
    width 130px
    float left

.toolkit-wrapper
  max-width (main-width + aside-width)
  margin auto
  height 100%
  position relative

.toolkit-container
  max-width (gutter-size + main-width + aside-width)
  margin auto
  position relative

.toolkit-main
  max-width main-width
  margin-right aside-width
  font-size 21px
  line-height 32px
  position relative
  padding-right gutter-size

.toolkit-stack-img
  float left
  margin-right gutter-size

.toolkit-stack-img, .toolkit-list
  margin-top (gutter-size - 4px)

.toolkit-ul li::before
  content "\2014"
  margin-right 5px

.toolkit-aside
  width aside-width
  height "calc(100% - %s)" % aside-margin
  min-height 800px
  padding gutter-size
  position absolute
  top -(header-height - aside-margin)
  right 0
  background white
  box-shadow 2px -4px 20px rgba(0,0,0,0.3)

.toolkit-main, .toolkit-aside
  display inline-block
  vertical-align top

.get-toolkit
  garamond-size('s-headline')

.toolkit-button
  width 100%

.form-footer-text
  font-size 17px
  color gray-dark-color

.toolkit-thank-you
  h3
    garamond-size('headline')
  display none

.toolkit-header, .toolkit-main
  padding-left gutter-size

.toolkit-error
  color red-color
  padding 10px 0
  display block

@media (max-width: 900px)

  .toolkit-stack-img
    display none

@media (max-width: 750px)

  .toolkit-header
    height 160px
    padding-left 0px

  .toolkit-artsy-logo
    display none

  .toolkit-wrapper h1
    padding mobile-padding
    font-size 40px
    line-height 1.2em
    bottom 0

  .toolkit-main, .toolkit-aside
    position relative
    display block
    margin 0
    width 100%
    padding 0 mobile-padding

  .toolkit-aside
    margin-top mobile-padding
    box-shadow none
    min-height 0
    top 0

  .toolkit-main
    margin-bottom 60px
    
  .toolkit-share
    padding-bottom 200px
