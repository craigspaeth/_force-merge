work-width = columns(3) + gutters(3)
work-offset = columns(2) + gutters(2)

#about-section3-genome-works
  position relative
#about-section3-genome-works-pullblurb
  position absolute
#about-section3-genome-works-column
  width work-width
  margin auto
.about-genome-work
  &:nth-child(odd)
    padding-left work-offset
    margin-right -(work-offset)
    .about-genome-work-genes
      right 100%
    .about-genome-work-gene
      transform translateX(50%)
  &:nth-child(even)
    padding-right work-offset
    margin-left -(work-offset)
    .about-genome-work-genes
      left 100%
    .about-genome-work-gene
      transform translateX(-50%)
  .about-artwork-details
    position absolute
    max-width 75%
.about-genome-work-image
  position relative
  > a > img
    width 100%
.about-genome-work-genes
  position absolute
  text-align center
  width gutters(4)
  bottom 0
  padding 0 30px
  transform translateY(50%)
.about-genome-work-gene
  display block
  avant-garde()
  small-avant-garde()
  margin gutter-width 0
  opacity 0
  transition all 0.5s
  transition-delay 0
  text-decoration none
  &:hover
    color purple-color
  &.is-active
    opacity 1
    transform translateX(0) !important
  &:nth-child(2)
    transition-delay 0.05s
  &:nth-child(3)
    transition-delay 0.1s
  &:first-child
    margin-top 0
  &:last-child
    margin-bottom 0

// Silly width overrides for portraits...
.about-genome-work
  &:nth-child(2)
  &:nth-child(6)
  &:nth-child(8)
    padding-left column-width
