.about-section-nav
  width 100%
  background-color white
  border-bottom 1px solid gray-lighter-color
  opacity 0
  transition opacity 0.25s
  &.stuck
    position fixed
    top 0
    left 0
    right 0
    z-index 3
    opacity 1
    force-hardware-acceleration()
  > nav
    display table
    width container-width
    height 65px
    margin auto
    > a
      display table-cell
      cursor pointer
      width 16.6%
      height 100%
      padding 20px
      text-align center
      vertical-align middle
      avant-garde()
      font-size 12px
      letter-spacing 1px
      line-height 1.4
      color gray-dark-color
      text-decoration none
      > span
        transition color 0.25s
      &:hover
      &.is-active
        > span
          color purple-color
