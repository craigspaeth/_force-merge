.fair-page-footer
  margin-bottom: 100px
  .avant-garde-header-center
    text-decoration none
    margin-top 30px
    font-size 13px

.footer-section-heading
  avant-garde()
  text-align center
  margin-bottom 20px

.fair-footer-left, .fair-footer-right
  width 44%
  display inline-block
  vertical-align top

.fair-footer-left
  width 56%

.footer-square-sections
  height: 500px
  overflow: hidden

.footer-square-section
  position relative
  display inline-block
  vertical-align top
  text-decoration none
  overflow hidden
  margin-right: 25px
  width: 172px
  .fair-footer-heading
    text-align center
    height: 81px
  img
    max-height 100%
    height: 172px
    margin-bottom 14px

.fair-footer-curator
  .small-section
    height auto
    text-align center
    color black
    background-color white
    border-right 1px solid gray-lighter-color
    text-decoration none
    width: 33%
    &:last-child
      border-right none
    .section-heading
      color black
      position static
      margin-top 18px
      text-align center
    img
      width: 80px
      height: 80px
      border-radius: 40px
      margin: 0px auto

.fair-footer-posts-container
  .small-post
    text-decoration none
    margin-bottom 10px
    display block
    img
      display inline-block
      width 150px
    .post-text
      display inline-block
      vertical-align top
      margin-left 20px
      border-bottom 1px solid gray-lighter-color
      height 128px
      width: 305px
      .section-heading
        font-size: 22px
        margin-top: 24px
      .section-subheading
        margin-top 3px
    &:last-child
      border-bottom 1px solid gray-lighter-color
      .post-text
        border-bottom 0px solid gray-lighter-color

.footer-section-heading-small
  text-align: center
  font-size: 20px
  margin-top: 20px
  margin-bottom: 30px
