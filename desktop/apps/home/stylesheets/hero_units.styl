fade-duration = 0.2s
hhu-credit-height = 30px

.home-hero-unit
  position absolute
  top 0
  left 0
  height 100%
  width 100%
  background center center no-repeat
  background-size cover
  transition opacity fade-duration ease-out
  opacity 0
  z-index 0
  &[data-type="right"]
    text-align right
  &[data-type="center"]
    text-align center
  &.home-hero-unit-active
    opacity 1
    z-index 1
    transition opacity fade-duration ease-in fade-duration
  .avant-garde-button
    padding 10px 20px
    border 3px solid black
    background transparent
    &:hover
    &:focus
    &:active
      background black

.hhu-frame
  display block
  position absolute
  top main-header-height
  right 0
  bottom 0
  left 0
  text-decoration none
  > .responsive-layout-container
  > .responsive-layout-container > .main-layout-container
    position relative
    height 100%
.hhu-inner
  margin-top -(hhu-credit-height)
.hhu-header
  font-size 21px
  line-height 1
.hhu-title
  display inline-block
  margin 25px 0 0 0
.hhu-subheading
  margin 30px 0
  font-size 27px
  line-height 1.3
.hhu-credit
  position absolute
  left 0
  bottom 0
  line-height hhu-credit-height
  font-style italic
  font-size 11px
  opacity 0.65

.home-hero-unit-black
  .hhu-subheading
  .hhu-header
  .hhu-credit
    color white
  .avant-garde-button
    border-color white
    color white
    &:hover
    &:focus
    &:active
      background white

#home-hero-units-controls
  width 100%
  position relative
  top -60px
  height 60px
  text-align center
  // Hide the controls when there is only one hero unit.
  // Instead of displaying none or not rendering
  // toggle visibility so that the top-most margin
  // doesn't collapse
  &[data-length='1']
    height 0
    visibility hidden

#home-hero-unit-dots
  display inline-block
  margin-top 22px
  li
    width 8px
    height @width
    border-radius @width
    margin-right 10px
    background gray-color
    display inline-block
    cursor pointer
    transition background-color 0.3s
    &.hhud-active
    &:hover
    &:focus
    &:active
      background black
    &:last-child
      margin-right 0

welcome-background-color = #dedede
.home-hero-unit-welcome
  background-color welcome-background-color
  .hhu-inner
    width 40%
    margin 0
  .icon-logotype
    display block
    margin-bottom 25px
    font-size 45px
    line-height @font-size
  .hhu-header
    font-size 40px
    text-transform none
    letter-spacing 0
    line-height 1.25
  .hhu-subheading
    margin 20px 0 30px 0
    font-size 18px
  .avant-garde-button
    background-color black
    color white
