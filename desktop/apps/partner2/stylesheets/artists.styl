#partner-artists
  .partner-artists-list
    margin-bottom 60px
    border-bottom 1px solid gray-lighter-color
    .artists-group
      padding-bottom 30px
    .artists-group-label
      text-align left
  .partner-artist-container:last-child
    .partner-artist
      border none
  .partner-artist
    margin-bottom 30px
    border-bottom 1px solid gray-lighter-color
  .partner-artist-info, .partner-artist-artworks
    margin-bottom 30px
  .partner-artist-info-left, .partner-artist-info-right
    display inline-block
    vertical-align top
  .partner-artist-info-left
    width (100 / 3) %
  .partner-artist-info-right
    width (100 / 3 * 2) %
    padding-left (100 / 30) %
  .partner-artist-artworks
    min-height 300px
  .partner-artist-name
    avant-garde()
    text-decoration none
  .follow-button
    margin-top 20px
  .partner-artist-blurb
    margin-bottom 10px
  .partner-artist-blurb-postfix
    color gray-darker-color
    font-style italic
