.probuyer-header
  position relative
  display flex
  justify-content center
  flex-direction column
  width 100%
  height 500px
  padding (gutter * 2)
  text-align center
  background-color black
  background-size cover
  background-repeat no-repeat
  background-position center center

  &:after
    display block
    content ''
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    background-color rgba(black 0.25)
    z-index 0

  > *
    z-index 1

  &__headline
  &__subheadline
    color white

  &__headline
    serif('xl-headline')

  &__subheadline
    serif('s-headline')

  &__cta
    margin gutter 0

    > a
      &
      &:hover
      &:focus
      &[disabled]
      &[disabled]:hover
        background-color white
        border none
