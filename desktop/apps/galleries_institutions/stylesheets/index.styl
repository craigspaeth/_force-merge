@require '../../../components/stylus_lib'
@require '../components/primary_carousel'
@require '../components/partner_cell'
@require '../components/partner_cell_carousel'
@require '../components/search_results'
@require '../components/dropdown'
@require './footer'
@require './carousels'
@require './search'

.galleries-institutions-page
  padding 40px 0
  margin 0 45px
  @media screen and (min-width: 1440px)
    margin auto

.galleries-institutions-header
  display table
  width 100%
  margin-bottom 60px

.galleries-institutions-subnav
.galleries-institutions-headline
  display table-cell
  height 100%
  vertical-align middle

.galleries-institutions-headline
  garamond-size('l-headline')

.galleries-institutions-subnav
  text-align right
  > a
    display inline-block
    margin-left 30px

.galleries-institutions-main-content
  &[data-state='landing']
    .galleries-institutions-carousels
      display block
    .galleries-institutions-search-results
      display none
  &[data-state='search']
    .galleries-institutions-carousels
      display none
    .galleries-institutions-search-results
      display block
