@import './subscribed'

.auction-page
  padding-top 50px
  padding-bottom @padding-top
  &.has-image
    padding-top 0

.auction-banner
  width 100%
  height 230px
  background-size cover
  background-position center center

.auction-banner--input-output, .auction-banner--input-slash-output
  background-position center right

.auction-icon
  margin 20px 0

.auction-icon--sothebys
  margin-bottom -20px

  img
    width 100px

.auction-preview-registration
  padding 20px 0
  margin @padding
  border-top 1px solid light-gray-border-color
  border-bottom @border-top
  text-align center
  > p
    margin-bottom 10px

.auction-title
.auction-clock
.auction-description
.auction-bidding-link
.auction-info-section
.auction-artworks-list-header
.auction-tabs .auction-artwork-list
  margin 20px 0

.auction-description
  > h3
    font-weight bold
  > ul, > p
    padding 20px 0


.auction-bidding-link
  text-align center
  > a
    color #666
    fine-faux-underline()

.auction-artworks-list-header
  display table
  width 100%
.aal-amount
.aal-filter
  display table-cell
  vertical-align middle
.aal-filter
  text-align right

.auction-info-section
  > h3
    avant-garde()
    font-size 12px
  > p
    margin 10px 0

.auction-preview-sidebar-label, .auction-preview-sidebar-text,
.auction-preview-sidebar-email
  text-align left

.auction-preview-sidebar-email
  .avant-garde-form-label
    margin 20px 0 10px 0
  input
    margin-bottom 15px

.auction-preview-sidebar-label
  font-size 24px
  margin-bottom 10px

// Accomodate Eigen back button
.layout-artsy-mobile-app
  .auction-page.has-no-image
    margin-top 80px
