@import '../../components/stylus_lib'

#artist-auction-results-note
  background-color note-yellow-bg-color
  padding 20px 60px
  font-size 18px
  text-align center
  line-height 1.2em
  border-bottom 1px solid light-gray-border-color

#artist-auction-results-header
  margin-top 20px

#artist-auction-results-artist-name
  text-align center

#artist-auction-results-info
  min-height 50px
  border-top 1px solid light-gray-border-color
  margin-top 15px

#artist-auction-results-count
  display inline-block
  padding-top 25px

#artist-auction-results-sort
  float right
  display inline-block
  padding-top 25px

#artist-auction-results
  margin 20px 0px 20px 0px
  li
    padding 15px 0
    border-top 1px solid light-gray-border-color
    clearfix()
    .artist-auction-results-img-container
    .artist-auction-results-details
      display inline-block
      vertical-align top
      width 75%
    .artist-auction-results-img-container
      padding-right 15px
      width 25%
      img
        width 100%
        display block
