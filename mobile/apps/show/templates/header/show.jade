      .show-page-partner
        a.chevron-arrow-button(href="#{show.partnerProfileHref()}")= show.partnerName()
      .show-page-running-dates
        p #{show.date('start_at').format('MMM Do')} â€“ #{show.date('end_at').format('MMM Do, YYYY')}
