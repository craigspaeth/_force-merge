@import '../../../components/stylus_lib'
@import '../../../components/follow_button/index.styl'
@import './shows'
@import './contact'

#partner-profile-header
  clearfix()
  margin-top 20px
  margin-bottom 20px
  #partner-profile-header-text
  img
    display inline-block
    vertical-align top
  img
    width 30%
    padding-right 15px
  #partner-profile-initials
    avant-garde()
    padding 10px
    width 80px
    height @width
    border 1px solid black
    text-align center
    line-height 60px
    font-size 40px
    margin-right 15px
    display inline-block
  #partner-profile-header-text
    width 69%
  .partner-profile-follow
    margin-top 20px

#partner-profile-featured-show
  img
    width 100%
    display block

.partner-profile-large-header
  margin 30px 0 30px 0
  font-size large-avant-garde-font-size !important

.partner-profile-follow
  clear both
  margin-bottom 30px

.partner .article
  padding-top 0
  .main-side-margin
    border-top 1px solid #ccc
