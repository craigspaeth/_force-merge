extends ../../../components/layout/templates/main
include ../../../components/filter/dropdown_mixin.jade

block content
  #tag-content.main-side-margin
    include header
    .tag-artworks
      .tag-artworks-filters
        +filter-dropdown('Price','price_range', {
          'All': '-1:1000000000000',
          'Under $1,000': '-1:1000',
          '$1,000 to $5,000': '1000:5000',
          '$5,000 to $10,000': '5000:10000',
          '$10,000 to $50,000': '10000:50000',
          'Over $50,000': '50000:1000000000000'
        })
  #tag-artworks-list.main-side-margin
    #tag-artworks-empty-message No artworks matched
    #tag-artworks-spinner.loading-spinner
