.artwork-highlights-module
  margin-top 20px
  margin-bottom 40px

.artwork-highlight-module
  &__container
    display flex
    width 100%
  &__show
    margin-bottom 40px
  &__image
    margin-right 15px
    line-height 0
    width 36%
    max-width 100px
    height 100px
    img
      width 100%
      height 100%

  &__details
    width 60%
    display flex
    flex-direction column
    justify-content center
  &__details__title a
    garamond-size('s-body', true)
    line-height 1
    text-decoration none
  &__details__author
    avant-garde-size('s-headline', true)
    color gray-darker-color
  &__details__partner
    avant-garde-size('body', true)
  &__details__location-date
    color gray-darker-color
    garamond-size('s-body', true)
    line-height 1
