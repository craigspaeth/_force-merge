.artwork-image-module
  include ./image_module

  .main-side-margin
    .artwork-image-module__label-icons
      .artwork-image-module__artwork-label
        if artists.length
          for artist in artists
            a.artist-name(href=artist.href)= artist.name
        else if artwork.cultural_maker
          .artist-name= artwork.cultural_maker
        .artwork-display
          if artwork.title
            em= artwork.title
          if artwork.date
            | , #{artwork.date}

      .artwork-header-module
        .artwork-header-module__share-button
        .artwork-favorites-container
          a.artwork-header-module__favorite( data-action='save' data-state='unsaved')
            i.icon-heart