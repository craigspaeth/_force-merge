.modal
  display block
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background #fff
  z-index z-modal-top
  overflow scroll
  -webkit-overflow-scrolling touch
  transition opacity .5s
  &.is-fadeout
    opacity 0

.modal__close::after
  font-family 'artsy-icons'
  content "\e621"
  font-size 24px
  color gray-color
  position absolute
  right 20px
  top 32px

.modal__content
  height 100%
