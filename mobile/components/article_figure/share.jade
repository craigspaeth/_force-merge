- referer = sd && encodeURIComponent(sd.APP_URL + sd.CURRENT_PATH)
- url = url || referer
- description = description || ''

nav.article-share
  a.article-share-item(
    href='https://www.facebook.com/sharer/sharer.php?u=#{url}'
    target='_blank'
  )
    i.icon-facebook-f

  a.article-share-item(
    href='https://twitter.com/intent/tweet?original_referer=#{referer}&text=#{description}&url=#{url}'
    target='_blank'
  )
    i.icon-twitter
