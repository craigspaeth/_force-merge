@import '../stylus_lib'

.share-menu
  display none
  position fixed
  right 0
  left 0
  top 0
  width 100%
  z-index 1
  transform translatez(0)
  background-color #fff
  opacity 0
  transition opacity 0.25s
  &.is-visible
    opacity 1
    transform translatez(0)

.share-menu-modal
  display none
  position fixed
  right 0
  left 0
  top 0
  width 100%
  height 100%
  background-color rgba(black, 0.5)
  z-index 1
  opacity: 0
  transition opacity 0.25s
  &.is-visible
    opacity 1
    background-color rgba(black, 0.5)

.share-menu-item
  avant-garde()
  display block
  padding 10px 20px
  border-bottom 1px solid light-gray-border-color
  text-decoration none
  &:last-child
    border-bottom none
  > span
  > i
    line-height 40px
  > span
    font-size 14px
    vertical-align middle
  > i
    display block
    float left
    margin-right 10px
    margin-top -2px
