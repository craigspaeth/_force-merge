a.share-toggle.circle-border-icon-button( href='#share' )
  i.icon-share

.share-menu-modal

nav.share-menu
  
  a.share-menu-item(
    href='https://www.facebook.com/sharer/sharer.php?u=#{url}',
    target='_blank'
  )
    i.icon-facebook
    span Facebook
  a.share-menu-item(
    href='https://twitter.com/intent/tweet?original_referer=#{url}&text=#{description}&url=#{url}',
    target='_blank'
  )
    i.icon-twitter
    span Twitter
  a.share-menu-item(
    href="https://pinterest.com/pin/create/button/?url=#{url}&media=#{encodeURIComponent(imageUrl)}&description=#{description}",
    target='_blank'
  )
    i.icon-pinterest
    span Pinterest
  .share-menu-item
    input.bordered-input.share-menu-url(
      type='text', value=url
    )
  .share-menu-item
    a.share-toggle.avant-garde-box-button.avant-garde-box-button-black(
      href='#done'
    ) Done
