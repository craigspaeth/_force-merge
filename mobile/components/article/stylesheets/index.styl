@import '../../stylus_lib'
@import './sections'
@import './fixed_share'

play-button-size = 20px

.article
  padding-top 30px

.layout-artsy-mobile-app .article
  padding 90px 0

.article-footer-container, .article-container
  z-index 3
  position relative
  background-color white

.article-footer-container
  padding 0px 20px 0px 20px

.article-section-header
  avant-garde-size('body', true)

.article-headline
  garamond-size('headline')
  padding 30px 0
  line-height 1.2

.article-subheader
  display table
  width 100%
  margin-bottom 40px

.article-lead-paragraph
  garamond-size('l-body')
  margin 20px 0
  a
    fine-faux-underline()
  a.artist-follow
    cursor pointer
    garamond-size('l-body')
    margin-left 10px

.article-byline
.article-actions
  display table-cell
  vertical-align middle

.article-author
.article-timestamp
  avant-garde()
  font-size 11px
  line-height 1.5
.article-timestamp
  color dark-gray-text-color

.article-contributing
  .article-item-contributing-name
    avant-garde-size('body',true)

.article-large-format-video
  position relative
  padding-bottom 56.25% /* 16:9 */
  height 0
  margin-bottom 30px
  iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%

.article-large-format-image
  margin-bottom 30px
  img
    top 0
    left 0
    width 100%

.article-video-cover-image
  background center center
  background-size cover
  width 100%
  height 100%
  position absolute
  padding-bottom 56.25%
  top 0
  left 0
  z-index 1

.article-video-play-button
  background white
  width play-button-size + 20px
  height @width
  position absolute
  top "calc(50% - %s)" % (@width / 2)
  left "calc(50% - %s)" % (@width / 2)
  z-index 2
  cursor pointer
  border 0
  outline 0

.article-video-play-button-caret
  width 0
  height 0
  top 10px
  left 12px
  position absolute
  border-top (play-button-size - 10) solid transparent
  border-bottom (play-button-size - 10) solid transparent
  border-left play-button-size solid black

.article-footer-next
  > h2
    margin 10px 0
    avant-garde()
    font-size 14px

.article-footer
  margin 20px 0
  padding 10px 0
  border-top 1px solid light-gray-border-color
  background-color transparent

#article-loading
  display none
  &.is-loading
    display block
