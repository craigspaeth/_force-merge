- referer = sd && encodeURIComponent(sd.APP_URL + sd.CURRENT_PATH)
- url = article.fullHref() || referer
- description = article.shareDescription() || ''

nav.article-fixed-share-nav
  a.article-fixed-share-item(
    href="mailto:?subject=#{description}&body=Check out #{description} on Artsy: #{url}",
    target='_blank',
    data-service='email'
  )
    i.icon-email
  a.article-fixed-share-item(
    href='https://twitter.com/intent/tweet?original_referer=#{referer}&text=#{description}&url=#{url}'
    target='_blank'
    data-service='twitter'
  )
    i.icon-twitter

  a.article-fixed-share-item(
    href='https://www.facebook.com/sharer/sharer.php?u=#{url}'
    target='_blank'
    data-service='facebook'
  )
    i.icon-facebook-f
