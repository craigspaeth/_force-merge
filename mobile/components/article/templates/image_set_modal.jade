.image-set-modal

  for item, i in items

    .image-set-modal__container

      .image-set-modal__artist
        if item.type === 'artwork' && item.artist && item.artist.name
          a.image-set-modal__artist-name(href="/artist/#{item.artist.slug}")= item.artist.name
          a.image-set-modal__follow-button.entity-follow.artist-follow(data-id=item.artist.slug)

      - var image = resize( (item.image || item.url || ''), { height: 500 } )
      img.image-set-modal__image(src=image)

      if item.type === 'image'
        .image-set-modal__title-container
          .image-set-modal__caption!= item.caption
          .image-set-modal__pagination= i+1 + "/" + length

      if item.type === 'artwork'
        .image-set-modal__title-container
          .image-set-modal__title= item.title
          .image-set-modal__date= ", " + item.date
          .image-set-modal__pagination= i+1 + "/" + length
        .image-set-modal__partner= item.partner.name
        a.image-set-modal__link(href="/artwork/#{item.slug}") View Details

.image-set-modal-js__close.image-set-modal__close
  i.icon-close
